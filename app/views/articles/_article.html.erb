<% obj.each do |article|%>
      <div class="card text-center mx-auto margin-index" style="width: 18rem;">
  <div class="card card-body">
    <%= link_to article.title, article_path(article), class: "card-title" %>
    <p class="card-text">  <%= truncate(article.description, lenght: 100) %></p>
    <% if logged_in? && current_user == article.user %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-primary btn-sm col" %>
          <%= link_to "Delete this article", article_path(article), method: :delete, data: { confirm: 'Are you sure? Do you want to delete this article?'}, class: "btn btn-danger btn-sm col" %>
        <%end%>
  </div>
</div>
<%end%>