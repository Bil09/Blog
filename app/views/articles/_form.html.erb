
<%= render 'shared/errors', obj: @article %>
    <div class="form-label">
    <%= form_for @article do |f| %>
       <p>
       <%= f.label :title %>
       <%= f.text_field :title, placeholder: "min. 5 charachters", class: "form-control" %>
       </p>
       <p>
       <%= f.label :description %><br>
       <%= f.text_area :description, placeholder: "min. 10 charachters and max.350", class: "form-control" %>
       </p>
       <p class="text=center">
       <%= f.submit class: "btn btn-success"%>
        <%= link_to "Delete this article", article_path(f), method: :delete, data: { confirm: 'Are you sure? Do you want to delete this article?'}, class: "btn btn-danger" %>
    </p>
    <% end %>
    </div>
        <%= link_to "back to articles", articles_path %>
